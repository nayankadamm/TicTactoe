{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Run Google Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "../test_main.cpp",  // Path to your test executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/build/YourProjectName": "${workspaceFolder}"
            }
        }
    ]
}
